<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Track and Cure"
                android:textColor="@color/black"
                android:textSize="23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/vi_notification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/notification_background"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView" />


            <View
                android:id="@+id/view"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_notification"
                android:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/vi_notification"
                app:layout_constraintEnd_toEndOf="@+id/vi_notification"
                app:layout_constraintStart_toStartOf="@+id/vi_notification"
                app:layout_constraintTop_toTopOf="@+id/vi_notification" />


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_poster"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/track"
                android:textColor="@color/white"
                android:textSize="28dp"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/treat"
                android:textColor="@color/white"
                android:textSize="28dp"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="@string/triumph"
                android:textColor="@color/white"
                android:textSize="28dp"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/poppins_medium"
                android:text="To protect you and your families from contagious diseases"
                android:textColor="@color/white"
                android:textSize="7dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/textView3" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:background="@drawable/poster_image_png"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView" />


            <View
                android:id="@+id/step_count"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_poster"
                android:backgroundTint="#F5ED2D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Steps\nCounts"
                android:textColor="@color/black"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/step_count"
                app:layout_constraintStart_toStartOf="@+id/step_count"
                app:layout_constraintTop_toTopOf="@+id/step_count" />

            <View
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:background="@drawable/steps_png"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/step_count"
                app:layout_constraintEnd_toEndOf="@+id/step_count"
                app:layout_constraintTop_toTopOf="@+id/step_count" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="So that we can recommend you the best lifestyle to follow"
                android:textSize="7dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/step_count"
                app:layout_constraintStart_toStartOf="@+id/textView5" />

            <View
                android:id="@+id/menstrual_cycle"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_poster"
                android:backgroundTint="#F2BFFB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/step_count" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Track Your\nMenstrual Cycle"
                android:textColor="@color/black"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/menstrual_cycle"
                app:layout_constraintStart_toStartOf="@+id/menstrual_cycle"
                app:layout_constraintTop_toTopOf="@+id/menstrual_cycle" />


            <View
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:background="@drawable/menstrual"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/menstrual_cycle"
                app:layout_constraintEnd_toEndOf="@+id/menstrual_cycle"
                app:layout_constraintTop_toTopOf="@+id/menstrual_cycle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Let us, make your periods easier"
                android:textSize="7dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/menstrual_cycle"
                app:layout_constraintStart_toStartOf="@+id/textView6" />


            <View
                android:id="@+id/pregnancy_tracker"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background_poster"
                android:backgroundTint="#FFE4E6"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/menstrual_cycle" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Pregnancy\nTracker"
                android:textColor="@color/black"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/pregnancy_tracker"
                app:layout_constraintStart_toStartOf="@+id/pregnancy_tracker"
                app:layout_constraintTop_toTopOf="@+id/pregnancy_tracker" />

            <View
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:background="@drawable/pregnancy"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/pregnancy_tracker"
                app:layout_constraintEnd_toEndOf="@+id/pregnancy_tracker"
                app:layout_constraintTop_toTopOf="@+id/pregnancy_tracker" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="For you , your baby and your family"
                android:textSize="7dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/pregnancy_tracker"
                app:layout_constraintStart_toStartOf="@+id/textView6" />





        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>